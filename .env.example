# Aletheia Configuration Template
# Copy this file to .env and update with your values
# 
# This file contains ALL configuration options with sensible defaults.
# Only the REQUIRED section needs to be modified for basic operation.

# ============================================
# REQUIRED - Must be set for services to start
# ============================================

# Project Configuration
COMPOSE_PROJECT_NAME=aletheia_development
ENVIRONMENT=development

# Database (PostgreSQL) - Choose strong passwords
DB_USER=aletheia
DB_PASSWORD=aletheia123  # CHANGE IN PRODUCTION!
DB_NAME=aletheia

# Security Keys (Generate unique values for production)
N8N_ENCRYPTION_KEY="your_secure_encryption_key_here"  # Generate: openssl rand -hex 32
N8N_WEBHOOK_ID=c188c31c-1c45-4118-9ece-5b6057ab5177
NEXTAUTH_SECRET=aletheia_main_nextauth_secret_64_characters_for_security_purposes  # Generate: openssl rand -base64 48

# ============================================
# PORTS - Change if you have conflicts
# ============================================

# Core Services
WEB_PORT=8080
WEB_HOST=0.0.0.0
N8N_PORT=8100
AI_PORTAL_PORT=8102
POSTGRES_PORT=8200
REDIS_PORT=8201
REVERSE_PROXY_PORT=8082
RECAP_WEBHOOK_PORT=5001

# ============================================
# SERVICE URLs - Used for inter-service communication
# ============================================

COURT_API_BASE_URL=http://court-processor:8104
NEXT_PUBLIC_COURT_API_URL=http://localhost:8104
NEXT_PUBLIC_WEB_URL=http://localhost:8080
NEXT_PUBLIC_AI_PORTAL_URL=http://localhost:8102
NEXT_PUBLIC_N8N_URL=http://localhost:8100

# ============================================
# OPTIONAL FEATURES - Leave empty if not using
# ============================================

# Document Selection Feature
FIELD_ENCRYPTION_KEY=
NEXT_PUBLIC_ENABLE_DOCUMENT_SELECTION=true
NEXT_PUBLIC_MAX_DOCUMENT_SELECTIONS=5

# PACER Integration
PACER_USERNAME=
PACER_PASSWORD=

# CourtListener API
COURTLISTENER_API_TOKEN=

# RECAP Webhook
RECAP_WEBHOOK_SECRET=

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

