{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "target": "es2020",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "nodes/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}