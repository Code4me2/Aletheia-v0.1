{
  "extends": "tslint:recommended",
  "rules": {
    "no-console": false,
    "object-literal-sort-keys": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "max-line-length": [true, 120],
    "quotemark": [true, "single"],
    "semicolon": [true, "always"],
    "indent": [true, "spaces", 2]
  }
}
